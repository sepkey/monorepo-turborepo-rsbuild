# Enable strict peer dependencies for better dependency resolution
strict-peer-dependencies=false

# Auto install peer dependencies
auto-install-peers=true

# Use hardlinks to save disk space (works well with monorepos)
symlink=false

# Enable hoisting for better performance in monorepos
hoist-pattern[]=*

# Prevent phantom dependencies
node-modules-dir-max-depth=1

# Show full dependency tree on install
depth=0
